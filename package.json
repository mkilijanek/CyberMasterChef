{
  "name": "cybermasterchef-root",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @cybermasterchef/workbench dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "test:e2e": "playwright test",
    "format": "prettier -w .",
    "ci": "pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "test:parity": "PARITY_THRESHOLD=0.90 node scripts/check-parity-coverage.mjs",
    "c1:domain-matrix": "node scripts/c1/generate-domain-matrix.mjs",
    "c2:plan": "node scripts/c2/generate-domain-implementation-plan.mjs"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.10.1",
    "@eslint/js": "^10.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.2",
    "prettier": "^3.3.3",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  }
}
